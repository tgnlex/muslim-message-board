<p><%= comment.content %></p>
<p>Posted by 
  <%= comment.user.email %> 
  <%= %> time_ago_in_words(comment.created_at) %>
</p>



  <% if user_signed_in? %>
  <% if comment.user == current_user.id %>
    <%= link_to "Edit", edit_post_comment_path(comment.post, comment) %>
    <%  link_to "Delete", [comment.post, comment], data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    } %>

  <% end %>
<% end %>
