<h2><%= @post.title %></h2>

<p><%= @post.description %></p>
<p><%= @post.created_at %></p>

<p>Posted by: 
  <%= @post.user.email  %>
  <%= time_ago_in_words(@post.created_at)%> 
</p>    

<h3>Comments:</h3>
<%= render @post.comments %>

<h3>Leave a Comment:</h3>
<%= render 'comments/form' %>

<p><%= link_to "Back",posts_path %></p>
<% if user_signed_in? %>
  <% if  @post.user_id == current_user.id %>        
    <p><%= link_to "Edit Post",edit_post_path(@post%></p>  
    <p><%= link_to "Destroy", post_path(@post), data: {
        turbo_method: :delete, 
        turbo_confirm: "Are you sure?"} %></p>
  <% end %>
<% end %> 