<h2><%= @post.title %></h2>
<p><%= @post.description %></p>
<p><%= @post.created_at %>       
<h3>Comments:</h3>
<%= render @post.comments %>
<h3>Leave a Comment:</h3>
<%= render 'comments/form' %>

<p>
  <%= 
    link_to "Back",
    posts_path 
  %>
</p>
<p>
  <%= 
    link_to "Edit Post", 
    edit_post_path(@post)
  %>    
</p>

<p>
  <%= 
    link_to "Destroy", 
    post_path(@post), 
    data: {
        turbo_method: :delete, 
        turbo_confirm: "Are you sure?"                       
    } 
  %>
</p>
